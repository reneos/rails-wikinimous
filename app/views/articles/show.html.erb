<div class="row">
  <h1><%= @article.title %></h1>
</div>

<div class="row">
  <p><%= @article.content %></p>
</div>

<div class="row">
  <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info mr-2" %>
  <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete %>
</div>
