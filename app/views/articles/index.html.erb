<div class="row mb-3">
  <h1>All articles</h1>
</div>
<div class="row">
  <% @articles.each do |article| %>
    <div class="card w-100 mb-5">
      <div class="card-body">

        <%= link_to article_path(article) do %>
          <h2 class="card-title">
            <%= article.title %>
          </h2>
        <% end %>

        <p class="card-text">
          <%= article.content %>
        </p>

      </div>
    </div>

  <% end %>
</div>
